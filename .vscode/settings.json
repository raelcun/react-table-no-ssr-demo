{
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      {
        "language": "typescript",
        "autoFix": true
      },
      {
        "language": "typescriptreact",
        "autoFix": true
      }
    ],
    "editor.formatOnSave": true,
    "[javascript]": {
      "editor.formatOnSave": false,
    },
    "[javascriptreact]": {
      "editor.formatOnSave": false,
    },
    "[typescript]": {
      "editor.formatOnSave": false,
    },
    "[typescriptreact]": {
      "editor.formatOnSave": false,
    },
    "editor.rulers": [
      120
    ],
    "editor.tabSize": 4,
    "files.autoSave": "afterDelay",
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true
    }
  }